{
  "version": 2,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/en", "destination": "/en/index.html" },
    { "source": "/zh", "destination": "/zh/index.html" },
    { "source": "/es", "destination": "/es/index.html" },
    { "source": "/asset/:path*", "destination": "/asset/:path*" }
  ],
  "redirects": [
    { "source": "/en/", "destination": "/en", "permanent": true },
    { "source": "/zh/", "destination": "/zh", "permanent": true },
    { "source": "/es/", "destination": "/es", "permanent": true }
  ]
}
